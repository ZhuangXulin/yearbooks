<body>
	<div id="wrapper">
		<div id="content">
			<div class="c1">
				<div class="controls">
					<nav class="links">
						<ul>
							<li><a href="/people#index" class="ico1">People </a></li>
							<li><a href="/people_yearbooks#index" class="ico2">People Yearbooks </a></li>
						</ul>
					</nav>
					<div class="profile-box">
						<span class="profile">
							<a href="#" class="section">
								<img class="image" src="/images/img1.png" alt="image description" width="26" height="26" />
								<span class="text-box">
									Welcome
									<strong class="name">Xulin Zhuang</strong>
								</span>
							</a>
							<a href="#" class="opener">opener</a>
						</span>
						 <%= link_to('Logout', destroy_user_session_path, :method => :delete,class: 'btn-on') %>  
					</div>
				</div>
				
				<div class="tabs">
					<div id="tab-1" class="tab">
						<article>
							<div class="text-section">
								<h1><p id="notice"><%= notice %></p></h1>
							</div>
							
						<ul class="states" >
							<%= form_tag people_path, :method => 'get' do %>
							<p>
							<%= text_field_tag :search_key, nil, placeholder: 'Enter person name...', size: 30 %>
							<%= submit_tag "Search", :name => nil %>
							</p>
							<% end %>
						</ul>
							
							
							
							<ul class="states" >
								<h1>Listing People</h1>

								<table>
								  <thead>
								    <tr style="text-align: center; COLOR: #0076C8; BACKGROUND-COLOR: #F4FAFF; font-weight: bold">
										<th width='10%'>NO.</th>
										<th width='10%'>Person ID</th>
								      	<th width='20%'>Person Name</th>
								      	<th width='20%' colspan="3">Operation</th>
								    </tr>
								  </thead>

								  <tbody>
								    <% @people.each_with_index do |person,i| %>
								      <tr>
										  <td align='center'><%= i+1 %></td>
										  <td align='center'><%= person.id %></td>
								        <td align='center'><%= person.name %></td>
								        <td align='center'><%= link_to 'Show', person %></td>
								        <td align='center'><%= link_to 'Edit', edit_person_path(person) %></td>
								        <td align='center'><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
								      </tr>
								    <% end %>
								  </tbody>
								</table>
							</br>
							
  每页显示<b><%= @people.per_page %></b>条数据,共有<b><%= @people.total_pages %></b>页,  共有<b><%= @people.total_entries %></b>条数据</br>
  <%= will_paginate @people, :container => false %>
								<br>

								<%= link_to 'New Person', new_person_path %>
								
							</ul>
						</article>
					</div>
				</div>
			</div>
		</div>
		
		
	</div>
</body>







