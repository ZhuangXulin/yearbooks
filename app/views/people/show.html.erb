
<body>
	<div id="wrapper">
		<div id="content">
			<div class="c1">
				<div class="controls">
					<nav class="links">
						<ul>
							<li><a href="/people#index" class="ico1">People </a></li>
							<li><a href="/people_yearbooks#index" class="ico2">People Yearbooks </a></li>
							<li><a href="/people_yearbooks/contrast" class="ico2">Contrast Yearbooks </a></li>
						</ul>
					</nav>
					<div class="profile-box">
						<span class="profile">
							<a href="#" class="section">
								<img class="image" src="/images/img1.png" alt="image description" width="26" height="26" />
								<span class="text-box">
									Welcome
									<strong class="name">Xulin Zhuang</strong>
								</span>
							</a>
							<a href="#" class="opener">opener</a>
						</span>
						 <%= link_to('Logout', destroy_user_session_path, :method => :delete,class: 'btn-on') %>  
					</div>
				</div>
				<div class="tabs">
					<div id="tab-1">
						<article>
							<div class="text-section">
								<h1><p id="notice"><%= notice %></p></h1>
							</div>
							<ul class="states">
								<h1>People Infomation</h1>
								<p>
								  <strong>Name:</strong>
								  <%= @person.name %>
								</p>

								<p>
								  <strong>Bio:</strong>
								  <%= @person.bio %>
								</p>
								<p>
								  <strong>Nationality:</strong>
								  <%= @person.nationality %>
								</p>
								<p>
								  <strong>Birthplace:</strong>
								  <%= @person.birthplace %>
								</p>
								<p>
								  <strong>Date of Birth:</strong>
								  <%= @person.date_of_birth %>
								</p>
								<p>
								  <strong>Date of Death:</strong>
								  <%= @person.date_of_death %>
								</p>
								<p>
								  <strong>Occupation:</strong>
								  <%= @person.occupation %>
								</p>
								<p>
								  <strong>Wikipedia URL:</strong>
								  <%= @person.wikipedia_url %>
								</p>
								<p>
								  <strong>Baike URL:</strong>
								  <%= @person.baike_url %>
								</p>
								<p>
								  <strong>This People Create At:</strong>
								  <%= @person.created_at %>
								</p>
								<p>
								  <strong>This People Update At:</strong>
								  <%= @person.updated_at %>
								</p>
								<P>
									<strong>This People Photo Is:</strong><br>
									<%= image_tag @person.photo.url(:medium) %>   
								</P>
								<%= link_to 'Edit', edit_person_path(@person) %> |
								<%= link_to 'Back', people_path %> | 
								<%= link_to 'Show yearbooks', '/people_yearbooks?person_name='+@person.name %>
							
							</ul>
						</article>
					</div>
				</div>
			</div>
		</div>
		
		
	</div>
</body>
